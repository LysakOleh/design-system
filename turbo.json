{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".tmp/**",
        "**/generated/**",
        "**/assets/data/**",
        "**/components/**/readme.md",
        "css/baloise-design-system.css",
        "css/design-system-table.css",
        "loader/**",
        "public/**",
        "wwww/**"
      ]
    },
    "registry": {
      "dependsOn": ["^registry"],
      "inputs": ["package.json", "package-lock.json"]
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "*.spec.ts", "*.spec.js"]
    }
  }
}
